@model EditProfileViewModel

<h2>Редактировать профиль</h2>

<form asp-action="EditProfile" method="post">
    <div class="form-group">
        <label asp-for="Bio">О себе</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FavoriteGenres">Любимые жанры</label>
        <input asp-for="FavoriteGenres" class="form-control" />
        <span asp-validation-for="FavoriteGenres" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Profile" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}