@model IEnumerable<Comment>

<h2>Панель модератора</h2>

<h3>Комментарии с жалобами</h3>
<table class="table">
    <thead>
        <tr>
            <th>Пользователь</th>
            <th>Книга</th>
            <th>Текст</th>
            <th>Жалобы</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Account" asp-action="UserProfile" asp-route-userId="@comment.UserId">@comment.User.Name</a>
                    <a asp-action="EditUser" asp-route-id="@comment.UserId" class="btn btn-sm btn-warning ml-2">Редактировать</a>
                </td>
                <td><a asp-controller="Books" asp-action="Details" asp-route-id="@comment.Book.Id">@comment.Book.Title</a></td>
                <td>@comment.Text</td>
                <td>@comment.ReportCount</td>
                <td>
                    <form asp-action="DeleteComment" method="post" style="display:inline;">
                        <input type="hidden" name="commentId" value="@comment.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Удалить комментарий?');">Удалить</button>
                    </form>
                    <form asp-action="ClearReports" method="post" style="display:inline;">
                        <input type="hidden" name="commentId" value="@comment.Id" />
                        <button type="submit" class="btn btn-success" onclick="return confirm('Очистить жалобы?');">Очистить жалобы</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Управление пользователями</h3>
<form asp-action="ModeratorPanel" method="get">
    <div class="form-group">
        <label>Поиск пользователя (по имени или email):</label>
        <input name="searchQuery" class="form-control" value="@ViewBag.SearchQuery" placeholder="Введите имя или email" />
        <button type="submit" class="btn btn-primary mt-2">Найти</button>
    </div>
</form>

@if (ViewBag.Users != null && ViewBag.Users.Count > 0)
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Редактировать</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Пагинация -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="ModeratorPanel" asp-route-searchQuery="@ViewBag.SearchQuery" asp-route-page="@(ViewBag.Page - 1)" asp-route-pageSize="@ViewBag.PageSize">Предыдущая</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                    <a class="page-link" asp-action="ModeratorPanel" asp-route-searchQuery="@ViewBag.SearchQuery" asp-route-page="@i" asp-route-pageSize="@ViewBag.PageSize">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="ModeratorPanel" asp-route-searchQuery="@ViewBag.SearchQuery" asp-route-page="@(ViewBag.Page + 1)" asp-route-pageSize="@ViewBag.PageSize">Следующая</a>
            </li>
        </ul>
    </nav>
}
else if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
{
    <p>Пользователи не найдены.</p>
}